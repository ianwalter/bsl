{
  "name": "@ianwalter/bsl",
  "description": "A module and CLI that makes using BrowserStack Local easy",
  "version": "2.0.0",
  "main": "index.js",
  "license": "SEE LICENSE IN LICENSE",
  "scripts": {
    "lint": "eslint .",
    "test": "bff",
    "postinstall": "./postinstall.js",
    "bsl": "./cli.js"
  },
  "bin": {
    "bsl": "cli.js"
  },
  "files": [
    "index.js",
    "cli.js",
    "postinstall.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ianwalter/bsl.git"
  },
  "keywords": [
    "browserstack",
    "local",
    "cli",
    "tunnel"
  ],
  "author": "Ian Walter <public@iankwalter.com> (https://iankwalter.com)",
  "bugs": {
    "url": "https://github.com/ianwalter/bsl/issues"
  },
  "homepage": "https://github.com/ianwalter/bsl#readme",
  "dependencies": {
    "@ianwalter/cli": "^1.2.0",
    "@ianwalter/fs": "^1.1.0",
    "@ianwalter/print": "^3.5.0",
    "common-tags": "^1.8.0",
    "dotenv": "^8.1.0",
    "download": "^7.1.0",
    "execa": "^2.0.4",
    "make-dir": "^3.0.0"
  },
  "devDependencies": {
    "@ianwalter/bff": "^6.5.2",
    "@ianwalter/bff-webdriver": "^5.2.0",
    "@ianwalter/eslint-config": "^3.0.0",
    "@ianwalter/release": "^3.0.5",
    "@ianwalter/renovate-config": "^1.2.0",
    "@ianwalter/test-server": "^2.1.0"
  },
  "bff": {
    "plugins": [
      "./config.js",
      "@ianwalter/bff-webdriver"
    ],
    "webdriver": {
      "browserstack": true,
      "browserstackLocal": false,
      "capabilities": {
        "browserName": "firefox",
        "bstack:options": {
          "local": true,
          "projectName": "bsl",
          "timezone": "New_York"
        }
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@ianwalter"
    ]
  },
  "renovate": {
    "extends": [
      "@ianwalter"
    ],
    "packageRules": [
      {
        "packagePatterns": [
          "^bff"
        ],
        "groupName": "bff packages"
      }
    ]
  }
}
