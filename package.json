{
  "name": "@ianwalter/bsl",
  "description": "A module and CLI that makes using BrowserStack Local easy",
  "version": "3.0.0",
  "main": "index.js",
  "license": "SEE LICENSE IN LICENSE",
  "scripts": {
    "lint": "eslint .",
    "test": "bff",
    "postinstall": "./postinstall.js",
    "bsl": "./cli.js"
  },
  "bin": {
    "bsl": "cli.js"
  },
  "files": [
    "index.js",
    "cli.js",
    "postinstall.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ianwalter/bsl.git"
  },
  "keywords": [
    "browserstack",
    "local",
    "cli",
    "tunnel",
    "tunneling"
  ],
  "author": {
    "name": "Ian Walter",
    "url": "https://ianwalter.dev"
  },
  "bugs": {
    "url": "https://github.com/ianwalter/bsl/issues"
  },
  "homepage": "https://github.com/ianwalter/bsl#readme",
  "dependencies": {
    "@ianwalter/cli": "^4.1.0",
    "@ianwalter/print": "^7.0.0",
    "common-tags": "^1.8.0",
    "dotenv": "^8.2.0",
    "download": "^8.0.0",
    "execa": "^4.0.2",
    "make-dir": "^3.1.0"
  },
  "devDependencies": {
    "@ianwalter/bff": "^9.9.1",
    "@ianwalter/bff-webdriver": "^6.0.3",
    "@ianwalter/eslint-config": "^5.1.0",
    "@ianwalter/nrg": "^0.0.87",
    "@ianwalter/release": "^5.0.2",
    "@ianwalter/renovate-config": "^1.3.0"
  },
  "bff": {
    "plugins": [
      "./config.js",
      "@ianwalter/bff-webdriver"
    ],
    "webdriver": {
      "browserstack": true,
      "browserstackLocal": false,
      "capabilities": {
        "browserName": "firefox",
        "bstack:options": {
          "local": true,
          "projectName": "bsl",
          "timezone": "New_York"
        }
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@ianwalter"
    ]
  },
  "renovate": {
    "extends": [
      "@ianwalter"
    ],
    "packageRules": [
      {
        "packagePatterns": [
          "^bff"
        ],
        "groupName": "bff packages"
      }
    ]
  }
}
